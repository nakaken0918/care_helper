
<div class= "wrapper">
  
  <div class = "header">

    <div class = "account">
      <% if user_signed_in? %><%# 条件分岐（ログインしている場合 %>
        <%= link_to current_user.name, root_path %>
        <a href = "#">ログアウト</a>
      <% else %><%# //条件分岐（ログインしていない場合 %>
        <%= link_to 'ログイン', new_user_session_path, class: "login" %>
        <%= link_to "職員登録", new_user_registration_path, class: "sign-up" %>
      <% end %>
    </div>
    <div class = "roll">
      <a href = "#">利用者名簿</a>
    </div>
    <div class = "enroll">
      <a href = "#">利用者登録</a>
    </div>
    <div class = "vault">
      <a href = "#">記録保管庫</a>
    </div>

  </div>

  <div class = "body">

    <div class = "record-page">

      <%# if list == "on" %>
        <%= render "patient_sort" %>
      <%# else %>
        <%#= render "record_header" %>
      <%# end %>

      <%# if list == "on" %>
        <%= render "patient_list"%>
      <%# else %>
        <%#= render "record_main" %>
      <%# end %>

    </div>

    <div class = "profile-page">
    
      <div class = profile-page-h>
        <%= render "profile_header" %>
      </div>
      <%= render "profile_main" %>

    </div>

  </div>

</div>
