<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <a>氏名を入力</a>
  <div class="field">
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) 猫田太郎", maxlength:"40" %>
  </div>
  
  <div class="field">
    <a>パスワードを入力</a><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
